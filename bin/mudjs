#!/usr/bin/env node

// Module dependencies

var program = require('commander')
    , pkg = require('../package.json')
    , os = require('os')
    , fs = require('fs')
    , mudjs = require('../')
    ;

// CLI

program.version(pkg.version)
    .usage('[host] [port]')
    .option('-h, --host', 'Telnet server hostname')
    .option('-p, --port', 'Port of telnet server')
    .parse(process.argv)

if (program.host || program.args[0]) {
    var host = program.args[0] ? program.args[0] : program.host;
    var port = program.args[1] ? program.args[1] : program.port ? program.port : 23;
    mudjs.startAndConnect(host, port)
} else {
    mudjs.start();
}

if (mudjs) {
    // import the history
    fs.exists('./mudjs_history', function(exists) {
        if (exists) {
            fs.readFile('./mudjs_history', function(err, data) {
                if (data.length > 0) {
                    var lines = data.toString().trim().split('\n');
                    mudjs.rl.history = lines;
                }
            });
        }
    });
}

process.on('exit', function(code) {
    // only perform synchronous operations here
    var data = "";
    mudjs.rl.history.map(function(item) {
        data = data + item + "\n";
    });

    fs.writeFileSync('./mudjs_history', data);
});

function abort(str) {
    console.error(str);
    process.exit(1);
}
